package quiz;

import javafx.fxml.FXML;
import javafx.scene.control.Button;
import javafx.scene.control.Label;
import javafx.event.ActionEvent;

public class UserDashboardController {

    @FXML
    private Label welcomeLabel;

    @FXML
    private Label scoreLabel;

    @FXML
    private Button startQuizBtn;

    @FXML
    private Button viewHistoryBtn;

    @FXML
    private Button logoutBtn;

    private String username = "User"; // You can set this dynamically

    private int score = 0;

    public void initialize() {
        welcomeLabel.setText("Welcome, " + username + "!");
        scoreLabel.setText("Score: " + score);
    }

    public void setUserData(String username, int score) {
        this.username = username;
        this.score = score;
        welcomeLabel.setText("Welcome, " + username + "!");
        scoreLabel.setText("Score: " + score);
    }

    @FXML
    void onStartQuiz(ActionEvent event) {
        // Load quiz scene
        System.out.println("Starting quiz...");
    }

    @FXML
    void onViewHistory(ActionEvent event) {
        // Show user history
        System.out.println("Viewing history...");
    }

    @FXML
    void onLogout(ActionEvent event) {
        // Log out and return to login screen
        System.out.println("Logging out...");
    }
}
