<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="1000.0" prefWidth="1900.0"
            style="-fx-background-color: #000000;"
            xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controller.SignUpController">

    <!-- Define ToggleGroup for gender -->
    <fx:define>
        <ToggleGroup fx:id="genderGroup"/>
    </fx:define>

    <children>
        <!-- Logo/Image -->
        <ImageView fitHeight="209.0" fitWidth="506.0" layoutX="472.0" layoutY="14.0">
            <image>
                <Image url="@images/download.jpg" />
            </image>
        </ImageView>

        <!-- Main title -->
        <Label layoutX="634.0" layoutY="232.0" prefHeight="45.0" prefWidth="263.0"
               text="Create an account" textFill="WHITE" alignment="CENTER">
            <font>
                <Font name="System Bold Italic" size="30.0" />
            </font>
        </Label>

        <!-- Labels -->
        <Label layoutX="279.0" layoutY="311.0" prefWidth="263.0" text="Your Name" textFill="WHITE">
            <font>
                <Font name="System Bold Italic" size="24.0" />
            </font>
        </Label>

        <Label layoutX="314.0" layoutY="383.0" prefWidth="145.0" text="E-mail" textFill="WHITE">
            <font>
                <Font name="System Bold Italic" size="24.0" />
            </font>
        </Label>

        <Label layoutX="314.0" layoutY="437.0" prefWidth="145.0" text="Gender" textFill="WHITE">
            <font>
                <Font name="System Bold Italic" size="24.0" />
            </font>
        </Label>

        <Label layoutX="314.0" layoutY="511.0" prefWidth="145.0" text="Password" textFill="WHITE">
            <font>
                <Font name="System Bold Italic" size="24.0" />
            </font>
        </Label>

        <Label layoutX="238.0" layoutY="589.0" prefWidth="297.0" text="Confirm Password" textFill="WHITE">
            <font>
                <Font name="System Bold Italic" size="24.0" />
            </font>
        </Label>

        <!-- TextFields -->
        <TextField fx:id="nameField" layoutX="572.0" layoutY="311.0" prefWidth="434.0"
                   promptText="Enter your name"/>

        <TextField fx:id="emailField" layoutX="572.0" layoutY="383.0" prefWidth="434.0"
                   promptText="Enter your email"/>

        <!-- Gender RadioButtons with ToggleGroup -->
        <RadioButton fx:id="maleRadioButton" layoutX="581.0" layoutY="443.0" text="Male"
                     toggleGroup="$genderGroup" textFill="WHITE">
            <font>
                <Font name="System Bold Italic" size="18.0"/>
            </font>
        </RadioButton>

        <RadioButton fx:id="femaleRadioButton" layoutX="715.0" layoutY="443.0" text="Female"
                     toggleGroup="$genderGroup" textFill="WHITE">
            <font>
                <Font name="System Bold Italic" size="18.0"/>
            </font>
        </RadioButton>

        <RadioButton fx:id="otherRadioButton" layoutX="850.0" layoutY="443.0" text="Other"
                     toggleGroup="$genderGroup" textFill="WHITE">
            <font>
                <Font name="System Bold Italic" size="18.0"/>
            </font>
        </RadioButton>

        <!-- Password Fields -->
        <PasswordField fx:id="passwordField" layoutX="572.0" layoutY="520.0" prefWidth="434.0"
                       promptText="Enter your password"/>

        <PasswordField fx:id="confirmPasswordField" layoutX="572.0" layoutY="597.0" prefWidth="434.0"
                       promptText="Confirm your password"/>

        <!-- Sign Up Button -->
        <Button fx:id="studentSignUp" layoutX="703.0" layoutY="680.0" prefWidth="99.0"
                onAction="#studentSignUpButton"
                style="-fx-background-color: #1FA9BB;" text="Sign Up">
            <font>
                <Font name="System Bold Italic" size="14.0" />
            </font>
        </Button>

        <!-- Footer Label -->
        <Label layoutX="969.0" layoutY="742.0" prefWidth="263.0" text="Â©MD.Abdur Rahman" textFill="WHITE"
               alignment="CENTER">
            <font>
                <Font name="System Italic" size="14.0" />
            </font>
        </Label>
    </children>
</AnchorPane>
