<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="814.0" prefWidth="1596.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <!-- Background Image -->
        <ImageView fitHeight="933.0" fitWidth="1592.0" layoutX="-4.0" preserveRatio="true">
            <image>
                <Image url="@main/resources/com/example/resources/Admin.jpg"/>
            </image>
        </ImageView>

        <!-- Title -->
        <Label layoutX="680.0" layoutY="80.0" prefHeight="60.0" prefWidth="240.0"
               style="-fx-background-color: #655133; -fx-background-radius: 15; -fx-alignment: center; -fx-text-fill: white;"
               text="Admin Login">
            <font>
                <Font size="28.0"/>
            </font>
        </Label>

        <!-- Login Form -->
        <VBox layoutX="1270.0" layoutY="600.0" spacing="10.0">
            <children>
                <!-- Username Label & Field -->
                <Text text="Username" fill="white">
                    <font>
                        <Font size="17.0"/>
                    </font>
                </Text>
                <TextField fx:id="usernameField" promptText="Enter username"
                           prefWidth="220" style="-fx-background-radius: 10;"/>

                <!-- Password Label & Field -->
                <Text text="Password" fill="white">
                    <font>
                        <Font size="17.0"/>
                    </font>
                </Text>
                <PasswordField fx:id="passwordField" promptText="Enter password"
                               prefWidth="220" style="-fx-background-radius: 10;"/>

                <!-- Login Button -->
                <Button fx:id="loginButton" text="Login"
                        style="-fx-background-color: #90ee90; -fx-text-fill: #4b2d4b; -fx-background-radius: 12;"
                        prefWidth="100"/>
            </children>
        </VBox>
    </children>
</AnchorPane>
