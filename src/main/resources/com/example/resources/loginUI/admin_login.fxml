<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.demo.controller.LoginController"
            prefHeight="400.0" prefWidth="600.0">

   <children>
      <Label layoutX="230.0" layoutY="50.0" text="Admin Login" style="-fx-font-size: 20px;"/>

      <TextField fx:id="usernameField"
                 layoutX="200.0" layoutY="120.0"
                 promptText="Username" prefWidth="200.0"/>

      <PasswordField fx:id="passwordField"
                     layoutX="200.0" layoutY="170.0"
                     promptText="Password" prefWidth="200.0"/>

      <Button text="Login"
              layoutX="250.0" layoutY="230.0"
              prefWidth="100.0"
              onAction="#handleLogin"/>
   </children>
</AnchorPane>
